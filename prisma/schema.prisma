// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PDATABASE_URL")
}

model User {
  id       Int      @default(autoincrement()) @id
  email    String   @unique
  name     String?
  password String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OTP {
  id          Int      @default(autoincrement()) @id
  email       String   
  otp         String   @unique
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Domain {
  id          Int      @default(autoincrement()) @id
  name        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id          Int      @default(autoincrement()) @id
  email       String   @unique
  name        String?
  password    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  permissions Json[]
}

model Chatbot {
  id          Int      @default(autoincrement()) @id
  name        String   @unique
  icone       String?
  isGreetings Boolean @default(false)
  greetingsSMS  String? 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Chatbot1 {
  id          Int      @default(autoincrement()) @id
  name        String   @unique
  icone       String?
  isGreetings Boolean @default(false)
  greetingsSMS  String?
  files       File[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model File {
  id        Int      @id @default(autoincrement())
  path      String
  chatbot   Chatbot1 @relation(fields: [chatbotId], references: [id])
  chatbotId Int
}